@model EShopDemo.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-info">Delete User</h1>
<h3 class="text-danger">Are you sure you want to delete this?</h3>
<br />

<div class="row p-4 rounded border">
    <div class="col-md-7">
        <form asp-action="Delete">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <input type="hidden" asp-for="Id" />

            <div class="row form-group">
                <div class="col-md-4">
                    <label asp-for="UserName" class="control-label">User Name</label>
                </div>
                <div class="col-md-8">
                    <input asp-for="UserName" class="form-control" readonly="readonly" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-4">
                    <label asp-for="FirstName" class="control-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="FirstName" class="form-control" readonly="readonly" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-4">
                    <label asp-for="LastName" class="control-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="LastName" class="form-control" readonly="readonly" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-4"></div>
                <div class="col-md-8">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-info">Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>