@model EShopDemo.Models.ApplicationUser

@{
    ViewData["Title"] = "Lockout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1>Lockout</h1>
<h3 class="text-warning">Do you want to lockout this user?</h3>
<div class="row p-4 rounded border">
    <div class="col-md-7">
        <form asp-action="Lockout">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <input type="hidden" asp-for="Id" />

            <div class="row form-group">
                <div class="col-md-4">
                    <label asp-for="UserName" class="control-label">User Name</label>
                </div>
                <div class="col-md-8">
                    <input asp-for="UserName" class="form-control" readonly="readonly" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-4">
                    <label asp-for="FirstName" class="control-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="FirstName" class="form-control" readonly="readonly" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-4">
                    <label asp-for="LastName" class="control-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="LastName" class="form-control" readonly="readonly" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-4"></div>
                <div class="col-md-8">
                    <input type="submit" value="Lockout" class="btn btn-warning" />
                    <a asp-action="Index" class="btn btn-info">Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>
