@model IEnumerable<EShopDemo.Models.Products>

@{
    ViewData["Title"] = "Home Page";

    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

@*<div class="text-center">
        <h1 class="display-1">Welcome</h1>
        <p class="display-4 text-primary font-italic">To My Online Shop. Get Your Product In One Place</p>
    </div>*@

<br />
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:22px; color:royalblue">@product.Name</label>
                    </h4>
                </div>
                <img src="~/@product.Image" alt="Card Iamge" style="height:300px;" class="card-img-top" />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:18px; color:firebrick;"><b>Price: @product.Price</b></label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-outline-info">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<partial name="_PagerPartial" model="@pager"/>