@model IEnumerable<EShopDemo.Models.TagList>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Special Tag List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-primary"><i class="fa-regular fa-plus"></i> New Tag Name</a>
    </div>
</div>
<br />

<div>
    <table class="table table-striped border">
        <thead>
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(model => model.TagName)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TagName)
                    </td>
                    <td class="">
                        <partial name="_ButtonPartial" model="@item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



@section Scripts{ 

    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var message = '@TempData["message"]';
            if (message != null) {
                alertify.success(message);
            }
        });
    </script>
}