
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Roles</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-primary"><i class="fa-regular fa-plus"></i> &nbsp; New Role</a>
    </div>
</div>
<br />

<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                Name
            </th>
            <th></th>
        </tr>
        @foreach (var item in ViewBag.Roles)
        {
            <tr>
                <td>@item.Name</td>
                <td style="width:150px">
                    <div class="btn-group">
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"><i class="fa-regular fa-pen-to-square"></i></a>
                        @*<a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id"><i class="fa fa-list"></i></a>*@
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa-regular fa-trash-can"></i></a>
                    </div>
                </td>
            </tr>
         }
    </table>
</div>



@section Scripts{

    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var message = '@TempData["succssesMessage"]';
            if (message != '') {
                alertify.success(message);
            }
        });
    </script>
}