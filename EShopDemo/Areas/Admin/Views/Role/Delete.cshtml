
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-info">Delete Role</h1>
<h3 class="text-danger">Are you sure you want to delete this?</h3>
<hr />

<h5 class="text-danger">@ViewBag.msg</h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete" id="roleForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="id" value="@ViewBag.id" />
            <div class="form-group">
                <label class="control-label">Name</label>
                <input id="name" name="name" value="@ViewBag.name" class="form-control" readonly="readonly" />
                @*<span asp-validation-for="UserName" class="text-danger"></span>*@
            </div>

            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>




