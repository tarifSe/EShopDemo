
@{
    ViewData["Title"] = "AssignedUserRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1></h1>

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Assigned User & Role</h2>
    </div>
    @*<div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-primary"><i class="fa-regular fa-plus"></i> &nbsp; New Role</a>
    </div>*@
</div>
<br />

<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                User Name
            </th>
            <th>
                Role Name
            </th>
        </tr>
        @foreach (var item in ViewBag.RolesUser)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.RoleName</td>
            </tr>
        }
    </table>
</div>

