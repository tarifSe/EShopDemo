@model EShopDemo.Areas.Admin.ViewModels.RoleUserVM
@{
    ViewData["Title"] = "Assign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-info">Assign New Role</h1>
<hr />

<div class="text-danger">
    <h5>@ViewBag.msg</h5>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Assign" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                @*<span asp-validation-for="ProductTypesId" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                @*<span asp-validation-for="SpecialTagId" class="text-danger"></span>*@
            </div>
            
            <div class="form-group">
                <input type="submit" value="Assign" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>




@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}