@model EShopDemo.Models.Products
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-info">Delete Product</h1>
<h3>Are you sure you want to delete this?</h3>
<br />


<div class="row p-4 rounded border">
    <div class="col-md-8">
        <form asp-action="Delete" enctype="multipart/form-data">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <input type="hidden" asp-for="Id" />

            <div class="row form-group">
                <div class="col-md-4">
                    <label asp-for="Name" class="control-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Name" class="form-control" readonly="readonly" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-4">
                    <label asp-for="Price" class="control-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Price" class="form-control" readonly="readonly" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-4">
                    <label asp-for="ProductColor" class="control-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="ProductColor" class="form-control" readonly="readonly" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-4">
                    <label asp-for="ProductTypesId" class="control-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="ProductTypes.ProductType" class="form-control" readonly="readonly" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-4">
                    <label asp-for="SpecialTagId" class="control-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="SpecialTag.TagName" class="form-control" readonly="readonly" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-4 ">
                    <label asp-for="IsAvailable" class="control-label"></label>
                </div>
                <div class="col-md-8 form-check">
                    <input class="form-check-input" asp-for="IsAvailable" disabled="disabled" />
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-info">Cancel</a>
            </div>
        </form>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-3">
        <img src="~/@Model.Image" width="100%" alt="No Image" />
    </div>
</div>

